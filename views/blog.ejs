<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4">
      <h1>Title: <%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="400vw" alt="img" />
      <h3><pre class="mt-3">Body: <%= blog.body %></pre>
    </div></h3>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>"  width="50px" > <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-4">
      <h1>Comment (<%= comments.length %>)</h1>
      <% if (locals.user) { %>
       <form action="/blog/comment/<%=blog._id %>" method="post">
        <div class="mb-3">
          <input type="text" class="form-control" id="content" name="content" placeholder="Enter your comment"/>
          <button class="btn btn-sm btn-primary" type="submit">Add Comment</button>
        </div>
      </form>
      <% } %>
      <div class="container mt-5">
        <% comments.forEach(comment => { %>
         <div>
          <img src="<%= comment.createdBy.profileImageUrl %>"  width="50px" > <%= comment.createdBy.fullName %>
          <pre style="margin-left: 60px;"><h5><%= comment.content %></h5></pre>
         </div>
        <% }) %>
      </div>
    </div>
    <%-include('./partials/script') %>
  </body>
</html>
